.container {
  width: 100%;
  height: 100vh;
  position: relative;
  background-color: #000;
  overflow: hidden;
}

.camera {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 顶部面板 */
.top-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.3));
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  z-index: 10;
}

/* 底部面板 */
.bottom-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.3));
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
  z-index: 10;
}

.bottom-btn-left,
.bottom-btn-right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
}

/* 拍照按钮 */
.capture-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0);
  border: 8rpx solid rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  /* box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3); */
}

.capture-btn-inner {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #fff;
}

.btn-icon {
  width: 50rpx;
  height: 50rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #fff;
  margin-top: 5rpx;
}


.score-image-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
  cursor: pointer;
  overflow: hidden;
  border-radius: 12rpx;
  margin-left: 0;
}

.score-image {
  width: auto;
  height: 100%;
  border-radius: 12rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  background-color: rgba(255, 255, 255, 0.1);
  display: block;
}

.region-marker {
  position: absolute;
  border: 2rpx solid #07c160;
  box-sizing: border-box;
  pointer-events: none;
  z-index: 10;
}

.region-marker::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border: 1rpx solid rgba(7, 193, 96, 0.5);
  box-shadow: 0 0 10rpx rgba(7, 193, 96, 0.3);
}

.score-content {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 99;
}

.score-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 10rpx;
}

.score-value {
  font-size: 60rpx;
  font-weight: bold;
  color: #07c160;
  line-height: 70rpx;
}

/* 预览遮罩层 */
.preview-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 1);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  height: auto;
}

.preview-region-marker {
  position: absolute;
  border: 3rpx solid #07c160;
  box-sizing: border-box;
  pointer-events: none;
  z-index: 10;
}

.preview-region-marker::before {
  content: '';
  position: absolute;
  top: -3rpx;
  left: -3rpx;
  right: -3rpx;
  bottom: -3rpx;
  border: 2rpx solid rgba(7, 193, 96, 0.5);
}

